# At least one key is required; multiple keys can be comma-separated.
PASSENGERS_API_KEYS=__PUT_REAL_KEY_HERE__
ADMIN_API_KEYS=__PUT_REAL_KEY_HERE__
CLIENT_API_KEYS=__PUT_REAL_KEY_HERE__

# Optional client scope defaults (comma-separated).
CLIENT_DEFAULT_CENTRAL_IDS=
CLIENT_DEFAULT_VEHICLE_IDS=

# Optional per-actor scope bindings (format: actor:central_id[:vehicle_id],...).
# Recommended actor policy: support-<system_id> (example: support-sys-0001:sys-0001).
CLIENT_SCOPE_BINDINGS=

# Optional support users for client console role (comma-separated BasicAuth users).
# Recommended actor policy: support-<system_id> (example: support-sys-0001).
CLIENT_SUPPORT_USERS=

# Persistent DB location inside the container.
DB_PATH=/data/passengers.sqlite3
