[Unit]
Description=Passengers WireGuard status export
After=network-online.target wg-quick@wg0.service
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/bin/python3 /opt/passengers-backend/ops/export_wg_status.py --wg-conf /etc/wireguard/wg0.conf --out-dir /opt/passengers-backend/wg

