[Unit]
Description=Passengers backend (Docker Compose)
After=network-online.target docker.service
Wants=network-online.target
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/passengers-backend
ExecStart=/usr/bin/docker compose -f compose.yaml -f compose.server.yaml up -d --build
ExecStop=/usr/bin/docker compose -f compose.yaml -f compose.server.yaml down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target

